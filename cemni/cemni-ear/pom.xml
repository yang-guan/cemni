<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>cemni-group</groupId>
		<artifactId>cemni</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>cemni-ear</artifactId>
	<packaging>ear</packaging>
	<dependencies>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-core</artifactId>
			<version>${huiju.version}</version>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-ee</artifactId>
			<version>${huiju.version}</version>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-config</artifactId>
			<version>${huiju.version}</version>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-data</artifactId>
			<version>${huiju.version}</version>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-log-plugin</artifactId>
			<version>${huiju.version}</version>
		</dependency>
		<dependency>
			<groupId>cemni-group</groupId>
			<artifactId>cemni-web</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>cemni-group</groupId>
			<artifactId>cemni-ejb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-fs-ejb</artifactId>
			<version>${huiju.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-notify-ejb</artifactId>
			<version>${huiju.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.huiju.module</groupId>
			<artifactId>module-message-plugin</artifactId>
			<version>${huiju.version}</version>
			<type>ejb</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<skinnyWars>true</skinnyWars>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<ejbModule>
							<groupId>cemni-group</groupId>
							<artifactId>cemni-ejb</artifactId>
						</ejbModule>
						<webModule>
							<groupId>cemni-group</groupId>
							<artifactId>cemni-web</artifactId>
							<contextRoot>/cemni-web</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>